{
  "python.analysis.completeFunctionParens": true,
  "python.analysis.typeCheckingMode": "strict",
  "python.venvPath": ".venv",
  "python.venvFolders": [
    ".venv"
  ],
  "python.analysis.autoImportCompletions": true,
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.formatOnType": true,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.ruff": "explicit",
      "source.organizeImports.ruff": "explicit"
    }
  },
  "python.analysis.diagnosticMode": "workspace",
  "python.terminal.activateEnvironment": false,

  "editor.tabSize": 2,
  "editor.rulers": [100],
  "workbench.settings.openDefaultKeybindings": true,
  "editor.tabCompletion": "on",
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,
  "workbench.tree.indent": 18,
  "security.workspace.trust.untrustedFiles": "open",
  "shellcheck.exclude": [
    "1091",
    "2002",
    "2230",
    "2312",
    "2250",
    "2310",
    "2311",
    "1090"
  ],
  "files.insertFinalNewline": true,
  "explorer.confirmDragAndDrop": false,
  "terminal.integrated.defaultProfile.osx": "bash",
  "shellcheck.customArgs": [
    "--severity=style",
    "--enable=all",
    "-x"
  ],
  "explorer.confirmDelete": false,
  "window.doubleClickIconToClose": true,
  "[terraform]": {
    "editor.defaultFormatter": "hashicorp.terraform",
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file"
  },
  "[terraform-vars]": {
    "editor.defaultFormatter": "hashicorp.terraform",
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file"
  },
  "editor.multiCursorModifier": "ctrlCmd",
  "shellcheck.executablePath": "/usr/local/bin/shellcheck",
  "shellcheck.disableVersionCheck": true,
  "explorer.fileNesting.enabled": true,
  "terraform.codelens.referenceCount": true,
  "jupyter.notebookFileRoot": "${workspaceFolder}",
  "files.associations": {
    "*.pkrvars.hcl": "hcl",
    "*.pkr.hcl": "hcl",
    "*.hcl": "terraform",
    "*.umm-json": "json"
  },
  "editor.detectIndentation": false,
  "notebook.output.textLineLimit": 75,
  "terraform.languageServer.terraform.path": "/usr/local/bin/terraform",
  "terraform.experimentalFeatures.validateOnSave": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "explorer.autoReveal": false,
  "jupyter.interactiveWindow.creationMode": "perFile",
  "editor.minimap.enabled": false,
  "remote.SSH.connectTimeout": 60,
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.fontSize": 14,

  "terminal.integrated.scrollback": 2000,
  "terminal.integrated.commandsToSkipShell": [
    // Ensure the toggle sidebar visibility keybinding skips the shell
    "workbench.action.toggleSidebarVisibility"
  ],
  "workbench.startupEditor": "none",
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  "redhat.telemetry.enabled": false,
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/.venv/**": true
  },
  "aws.samcli.lambdaTimeout": 1234,
  "git.openRepositoryInParentFolders": "never",
  "update.mode": "manual",
  "continue.enableTabAutocomplete": false,
  "markdown-word-count.selectionCount": true,
  "continue.showInlineTip": false,
  "jupyter.widgetScriptSources": [
    "jsdelivr.com",
    "unpkg.com"
  ],
  "lldb.suppressUpdateNotifications": true,
  "python.analysis.packageIndexDepths": [
    {
      "name": "e84_geoai_common",
      "depth": 4,
      "includeAllSymbols": true
    },
    {
      "name": "natural_language_geocoding",
      "depth": 4,
      "includeAllSymbols": true
    },
    {
      "name": "shapely",
      "depth": 3,
      "includeAllSymbols": true
    }
  ]
}
